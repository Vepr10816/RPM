@model RPM_3_Course.Models.User

@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<body style="background-color:#808080">
    <div style="text-align:center; background-color:#EEE2DC">
        <form asp-action="Registration" asp-controller="Home" class="box">
            <h1>Регистрация</h1>
            <div>
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <label asp-for="Last_Name">Фамилия:</label><br />
                    <input type="text" asp-for="Last_Name" class="form-control" placeholder="Last_Name" />
                    <span asp-validation-for="Last_Name"></span>
                </div>
                <div>
                    <label asp-for="First_Name">Имя:</label><br />
                    <input type="text" asp-for="First_Name" class="form-control" placeholder="Firs_Name" />
                    <span asp-validation-for="First_Name"></span>
                </div>
                <div>
                    <label asp-for="Middle_Name">Отчество:</label><br />
                    <input type="text" asp-for="Middle_Name" class="form-control" placeholder="Middle_Name" />
                    <span asp-validation-for="Middle_Name"></span>
                </div>
                <div>
                    <label asp-for="Date_Of_Birth">Дата рождения:</label><br />
                    <input type="date" asp-for="Date_Of_Birth" class="form-control" />
                    <span asp-validation-for="Date_Of_Birth"></span>
                </div>
                <div>
                    <label asp-for="Email">Email:</label><br />
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div>
                    <label asp-for="Login">Логин:</label><br />
                    <input type="text" asp-for="Login" class="form-control" placeholder="Login" />
                    <span asp-validation-for="Login"></span>
                </div>
                <div>
                    <label asp-for="Password">Пароль:</label><br />
                    <input type="password" asp-for="Password" class="form-control" placeholder="********" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div>
                    <label hidden="hidden" asp-for="RolesId"></label><br />
                    <input type="hidden" asp-for="RolesId" readonly="readonly" value="2" class="form-control" />
                    <span hidden="hidden" asp-validation-for="RolesId"></span>
                </div>
                <div>
                    <label hidden="hidden" asp-for="PictureeId"></label><br />
                    <input type="hidden" asp-for="PictureeId" readonly="readonly" value="1" class="form-control" />
                    <span hidden="hidden" asp-validation-for="PictureeId"></span>
                </div>
                <div class="form-group">
                    <input style="background-color:white" type="submit" value="Зарегистрироваться" class="btn btn-default" />
                </div>
                <a asp-action="Sign_In">Войти</a>
            </div>
        </form>
    </div>
</body>


        @section scripts{

            <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        }
