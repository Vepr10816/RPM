@model RPM_3_Course.Models.User

@{
    ViewBag.Title = "Изменить пользователя";
}
<form asp-action="edit" asp-controller="home" class="box">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="email" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Login" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Last_Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="First_Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Middle_Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="date" asp-for="Date_Of_Birth" class="form-control" />
    </div>
    <div>
        <label asp-for="RolesId"></label><br />
        <input type="number" asp-for="RolesId" class="form-control" />
        <span asp-validation-for="RolesId"></span>
    </div>
    <div>
        <label asp-for="PictureeId"></label><br />
        <input type="number" asp-for="PictureeId" class="form-control" />
        <span asp-validation-for="PictureeId"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Редактировать" class="btn btn-default" />
    </div>
    <div>
        <a asp-action="Index">Назад</a>
    </div>
</form>